{
    "compilerOptions": {
	"experimentalDecorators": true,
        "module": "commonjs",
        "target": "es2017",
        "sourceMap": true,
        "types": ["node"],
	"noImplicitAny": true,
	"preserveConstEnums": true,
	"noEmitOnError": true,
	"noUnusedParameters": true,
	"noUnusedLocals": true,
	"removeComments": true,
	"jsx": "react"
    },
    "include":[
	"./src/**/*"
    ],
    "exclude": [
        "node_modules",
	"dist",
	".test.ts"
    ]
}
